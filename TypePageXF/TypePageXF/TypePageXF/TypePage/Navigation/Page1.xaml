<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TypePageXF.TypePage.Navigation.Page1"
             Title="Title of Navigation">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" Icon="xamarin.png"/>
        <ToolbarItem Text="Detalhes" Icon="Page.png"/>
        <ToolbarItem Text="Ordenar" Icon="play.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="I'm a Content Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            <Button Text="Go to Page 2" Clicked="ChangeForPage2"/>

            <Button Text="Call Modal" Clicked="CallModal"/>
            <Button Text="Call Master" Clicked="CallMaster"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>